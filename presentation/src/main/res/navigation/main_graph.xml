<?xml version="1.0" encoding="utf-8"?>
<!--suppress NavigationFile -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.darestory.ui.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/detailFragment"/>

        <action
            android:id="@+id/action_home_to_prose_write"
            app:destination="@id/proseWriteFragment"/>


        <action
            android:id="@+id/action_home_to_prose_recent_search"
            app:destination="@id/recentSearchFragment"/>

    </fragment>

    <fragment
        android:id="@+id/discussionFragment"
        android:name="com.example.darestory.ui.main.discussion.DiscussionFragment"
        android:label="fragment_discussion"
        tools:layout="@layout/fragment_discussion">

    </fragment>

    <fragment
        android:id="@+id/myFragment"
        android:name="com.example.darestory.ui.main.my.MyFragment"
        android:label="fragment_my"
        tools:layout="@layout/fragment_my">

    </fragment>

    <fragment
        android:id="@+id/recentSearchFragment"
        android:name="com.example.darestory.ui.main.search.recent.RecentSearchFragment"
        android:label="fragment_recent_search"
        tools:layout="@layout/fragment_recent_search">

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.darestory.ui.main.home.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="detailId"
            app:argType="integer" />

        <argument
            android:name="detailType"
            app:argType="com.example.domain.model.enums.DetailType"/>

        <action
            android:id="@+id/action_detail_to_prose_write"
            app:destination="@id/proseWriteFragment"/>

        <action
            android:id="@+id/action_detail_to_report"
            app:destination="@id/reportFragment"/>

    </fragment>

    <fragment
        android:id="@+id/proseWriteFragment"
        android:name="com.example.darestory.ui.main.home.detail.write.prose.ProseWriteFragment"
        android:label="fragment_prose_write"
        tools:layout="@layout/fragment_prose_write">

        <argument
            android:name="proseId"
            app:argType="integer" />

        <argument
            android:name="proseWriteType"
            app:argType="com.example.domain.model.enums.ProseWriteType"/>

    </fragment>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.darestory.ui.main.report.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report">

        <argument
            android:name="userName"
            android:defaultValue=""
            app:argType="string" />

    </fragment>

</navigation>