<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Heading -->
    <style name="h1">
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">40sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">38sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="h3">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">36sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="h4">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">32sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="h5">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Title -->
    <style name="title1">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="title2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="title3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Body -->
    <style name="body1">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <style name="body2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <style name="body3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <!-- Button -->
    <style name="btn1">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/pretendard_semi_bold</item>
    </style>

    <style name="btn2">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="fontFamily">@font/pretendard_semi_bold</item>
    </style>

    <style name="btn3">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/pretendard_semi_bold</item>
    </style>

    <!-- Caption -->
    <style name="c1">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="c2">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="c3">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="c4">
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">16sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

</resources>